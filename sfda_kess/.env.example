# 資料庫設定（使用與 sfda_nexus 相同的資料庫）
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sfda_nexus
DB_USER=root
DB_PASSWORD=

# LLM 設定
LLM_PROVIDER=local
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1

# 本地 LLM 設定（使用 Gemma 3:27b）
LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=gemma2:27b

# 監控設定
WATCH_FOLDERS=./demo-data,../docs
POLLING_INTERVAL=5000
MAX_FILE_SIZE=10485760
SUPPORTED_EXTENSIONS=.txt,.md,.pdf,.docx,.xlsx

# 處理設定
BATCH_SIZE=10
PROCESSING_DELAY=1000
RETRY_ATTEMPTS=3

# 日誌設定
LOG_LEVEL=info
LOG_FILE=./logs/kess.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# 摘要設定
SUMMARY_MAX_LENGTH=500
SUMMARY_LANGUAGE=zh-TW
EXTRACT_KEYWORDS=true
EXTRACT_ENTITIES=true

# 排程設定
CRON_SCHEDULE=0 */6 * * *
ENABLE_REALTIME_MONITORING=true
ENABLE_SCHEDULED_PROCESSING=true
