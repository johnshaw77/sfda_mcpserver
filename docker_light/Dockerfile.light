# Multi-stage Dockerfile for SFDA Light
# Stage 1: Qwen Agent Light
FROM python:3.11-slim as qwen-agent-light

# 設定工作目錄
WORKDIR /app

# 安裝系統相依套件
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# 複製 qwen_agent_poc 需求檔案
COPY qwen_agent_poc/requirements.txt .

# 安裝 Python 相依套件
RUN pip install --no-cache-dir -r requirements.txt

# 複製 qwen_agent_poc 所有檔案
COPY qwen_agent_poc/ .

# 複製輕量化配置檔案，覆蓋原本的 config.py
COPY docker_light/config.py ./config.py

# 建立日誌和快取目錄
RUN mkdir -p /app/logs /app/cache

# 建立應用使用者
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# 設定環境變數
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# 暴露端口
EXPOSE 7860

# 健康檢查
HEALTHCHECK --interval=60s --timeout=30s --start-period=120s --retries=3 \
    CMD curl -f http://localhost:7860 || exit 1

# 啟動命令
CMD ["python", "gradio_ui.py"]
