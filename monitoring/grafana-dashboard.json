{
  "dashboard": {
    "id": null,
    "title": "MCP Server 監控儀表板",
    "tags": [
      "mcp",
      "server",
      "monitoring"
    ],
    "style": "dark",
    "timezone": "Asia/Taipei",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "服務狀態總覽",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "up{job=\"mcp-server\"}",
            "legendFormat": "服務狀態"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "離線"
                  }
                },
                "type": "value"
              },
              {
                "options": {
                  "1": {
                    "text": "在線"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "請求總數",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(increase(http_requests_total[1h]))",
            "legendFormat": "小時請求數"
          }
        ]
      },
      {
        "id": 3,
        "title": "平均回應時間",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_sum[5m]) / rate(http_requests_total[5m])",
            "legendFormat": "平均回應時間 (秒)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3
          }
        }
      },
      {
        "id": 4,
        "title": "錯誤率",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "錯誤率 (%)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "請求趨勢",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "每秒請求數"
          }
        ],
        "yAxes": [
          {
            "label": "請求/秒"
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 6,
        "title": "回應時間分佈",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50% 回應時間"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95% 回應時間"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "99% 回應時間"
          }
        ],
        "yAxes": [
          {
            "label": "秒",
            "unit": "s"
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 7,
        "title": "工具調用統計",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "expr": "sum by (tool_name) (increase(tool_calls_total[1h]))",
            "legendFormat": "{{ tool_name }}",
            "format": "table"
          }
        ]
      },
      {
        "id": 8,
        "title": "SSE 連接數",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        },
        "targets": [
          {
            "expr": "sse_connections_active",
            "legendFormat": "活躍連接數"
          }
        ],
        "yAxes": [
          {
            "label": "連接數"
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 9,
        "title": "系統資源使用",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 20
        },
        "targets": [
          {
            "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU 使用率 (%)"
          },
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "記憶體使用率 (%)"
          }
        ],
        "yAxes": [
          {
            "label": "百分比",
            "unit": "percent",
            "max": 100
          },
          {
            "show": false
          }
        ]
      }
    ]
  }
}