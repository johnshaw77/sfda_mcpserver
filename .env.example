# ================================================================
# MCP Server 演示環境變數配置
# ================================================================

# ============= 基礎服務配置 =============
MCP_PORT=8080
NODE_ENV=demo
SERVER_HOST=0.0.0.0
TZ=Asia/Taipei

# ============= 演示模式設定 =============
DEMO_MODE=true
DEMO_DATA_PATH=/app/demo-data

# ============= 企業系統 API 配置 =============
MAIN_SYSTEM_URL=http://localhost:3000/api/mcp
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# ============= 日誌配置 =============
LOG_LEVEL=debug
LOGGING_ENABLED=true
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DIR=./logs

# ============= 監控配置 =============
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PROMETHEUS_METRICS_PATH=/metrics

# ============= SSE 配置 =============
SSE_ENABLED=true
SSE_HEARTBEAT_INTERVAL=30000
SSE_MAX_CONNECTIONS=100
SSE_CONNECTION_TIMEOUT=300000

# ============= 工具配置 =============
TOOLS_ENABLED=true
TOOL_EXECUTION_TIMEOUT=30000
TOOL_VALIDATION_ENABLED=true
TOOL_STATS_ENABLED=true

# ============= Docker Compose 配置 =============
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=demo123

# Redis
REDIS_PORT=6379

# Node Exporter
NODE_EXPORTER_PORT=9100

# cAdvisor
CADVISOR_PORT=8081

# Demo Data Generator
DEMO_GENERATOR_INTERVAL=60000

# 演示環境專用設定
NODE_ENV=demo
DEMO_MODE=true
LOG_LEVEL=debug
METRICS_ENABLED=true
SSE_ENABLED=true

